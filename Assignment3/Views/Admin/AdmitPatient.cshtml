@model Assignment3.Models.Appointment
@{
    ViewBag.Title = "Admin Home";
}
<h2>Admit Patient</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Appointment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("Patient_Id", ((Assignment3.Models.Patient)ViewBag.patient).Id.ToString())
        @*@Html.HiddenFor(model => model.Patient_Id, new { @class = "form-control" , @value= ((Assignment3.Models.Patient)ViewBag.patient).Id.ToString() })*@
        <div class="form-group">
            @Html.LabelFor(model => model.Doctor_Id, "Doctor_Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Doctor_Id", (List<SelectListItem>)ViewBag.doctors, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Doctor_Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Admission_date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admission_date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Admission_date, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Admit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
